{
    "manifest_version": 3,
    "name": "Vocab Tracker",
    "description": "Keep track of new vocab and phrases in a foreign language. Highlight and save text in a webpage, and play flashcard games with text you've saved.",
    "version": "1.0.0",
    "action": {
        "default_popup": "popup/default_popups/main.html",
        "default_icon": {
            "16": "assets/favicons/favicon-16x16.png",
            "32": "assets/favicons/favicon-32x32.png",
            "48": "assets/favicons/favicon-48x48.png",
            "128": "assets/favicons/favicon-128x128.png"
        },
        "default_title": "Vocab Tracker",
        "popup": [
            "popup/alt_popups/traduc_popup.html"
        ],
        "tooltip": "Highlight new vocabulary you want to save for later"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["scripts/main_button.js", 
                "scripts/modules/translationPopup.js"],
        "css": ["scripts/styles.css"]
    }],

    "permissions":  [
        "contextMenus", 
        "storage",
        "activeTab",
        "scripting"
    ]
}
