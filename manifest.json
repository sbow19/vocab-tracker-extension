{
    "manifest_version": 3,
    "name": "Vocab Tracker",
    "version": "0.1.0",
    "action":{
        "default_popup": "action/default_popup.html"
    }, 
    "description": "Track new vocab you find on the web",

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content/content_views.js"],
        "css": ["content/translation_popup.css", "content/popup_bubble.css"]
}],
    "permissions": [
        "activeTab",
        "storage"
    ],
    "background":{
        "service_worker": "service_worker.js"
    },
    "options_page": "options.html"
}